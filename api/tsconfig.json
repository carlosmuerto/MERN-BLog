{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",                                  
    "paths": {
      "@services/*": ["src/services/*"],
      "@models/*": ["src/models/*"],
      "@utils/*": ["src/utils/*"],
      "@routes/*": ["src/routes/*"],
      "@routes": ["src/routes"],
      "@controllers/*": ["src/controllers/*"],
      "@controllers": ["src/controllers"],
    },
    
    "target": "ES2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": ["tsconfig-paths/register"]
  }
}
